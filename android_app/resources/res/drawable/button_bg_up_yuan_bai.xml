<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <padding
                android:left="@dimen/dp_2"
                android:top="@dimen/dp_2"
                android:right="@dimen/dp_2"
                android:bottom="@dimen/dp_2"/>
            <solid android:color="#f2eaeffa"/>
            <corners android:radius="@dimen/dp_100"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding
                android:left="@dimen/dp_1"
                android:top="@dimen/dp_1"
                android:right="@dimen/dp_1"
                android:bottom="@dimen/dp_1"/>
            <solid android:color="#e6eaeffa"/>
            <corners android:radius="@dimen/dp_100"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding
                android:left="1px"
                android:top="1px"
                android:right="1px"
                android:bottom="1px"/>
            <solid android:color="#80eaeffa"/>
            <corners android:radius="@dimen/dp_100"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle"
            android:useLevel="false">
            <solid android:color="#ffffff"/>
            <corners android:radius="@dimen/dp_100"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"/>
        </shape>
    </item>
</layer-list>
