<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f5f7f8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/white"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_11"
        android:paddingEnd="@dimen/dp_16">
        <ImageView
            android:id="@+id/imgBack"
            android:padding="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_icon1"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/sp_18"
            android:textColor="@color/text_color_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/User_type"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/linear_enterprise"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_16">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/text_color_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/login_enterprise"
                    android:layout_weight="1"/>
                <RadioButton
                    android:id="@+id/radio_enterprise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:background="#f5f7f8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/linear_person"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_16">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/text_color_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/login_person"
                    android:layout_weight="1"/>
                <RadioButton
                    android:id="@+id/radio_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:background="#f5f7f8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color_1"
            android:gravity="center"
            android:id="@+id/btnSave"
            android:background="@drawable/shape_so_cheng_st_0_co_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:text="@string/my_language_save"
            android:textAllCaps="false"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"/>
    </LinearLayout>
</LinearLayout>
