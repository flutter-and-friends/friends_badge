<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgBack"
            android:padding="@dimen/dp_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_icon1"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="@color/text_color_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_nfc_find"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/linearIphone"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_color_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="苹果"
                    android:layout_marginStart="@dimen/dp_10"/>
            </LinearLayout>
            <View
                android:background="#f5f7f8"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/linearXiaoMi"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_color_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/my_nfc_xiaomi"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp_10"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_right"/>
            </LinearLayout>
            <View
                android:background="#f5f7f8"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/linearHUAWEI"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_color_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/my_nfc_huawei"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp_10"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_right"/>
            </LinearLayout>
            <View
                android:background="#f5f7f8"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/linearSanXing"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_color_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/my_nfc_sanxing"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp_10"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_right"/>
            </LinearLayout>
            <View
                android:background="#f5f7f8"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/linearOppo"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_color_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/my_nfc_oppo"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp_10"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_right"/>
            </LinearLayout>
            <View
                android:background="#f5f7f8"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/linearVivo"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_color_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/my_nfc_vivo"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp_10"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_right"/>
            </LinearLayout>
            <View
                android:background="#f5f7f8"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/text_color_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/my_nfc_info"
                    android:layout_marginStart="@dimen/dp_10"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
